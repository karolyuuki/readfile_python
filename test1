def separate_things (sizeV, value):
    sizeF = sizeV - 1
    lista = []
    a = 0
    while (a < sizeF):
         lista.append(value[a])
         a = a+1
    return lista
    

filex = open ('C:/Users/Karol/Desktop/Tsukuba/Python/iris.txt', 'r')
list_items = filex.readlines()
size =(len(list_items))
print (size)
Lsep = list()
for item in list_items:
    value = item.split(",")
    n =(len(value))
    Lsep.append (separate_things(n, value))
print (n)
print (Lsep)

newarchive = open('C:/Users/Karol/Desktop/Tsukuba/Python/list1.txt', 'w')
newarchive.write (str(Lsep))
newarchive.close()
